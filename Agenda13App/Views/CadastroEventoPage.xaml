<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda13App.Views.CadastroEventoPage"
             Title="Cadastro de Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry Placeholder="Nome do evento" Text="{Binding Nome}" />

            <DatePicker Date="{Binding DataInicio}" />
            <DatePicker Date="{Binding DataFim}" />

            <Label Text="Numero de Participantes"/>
            <Entry Keyboard="Numeric" 
                   Text="{Binding NumeroParticipantes}" />

            <Entry Placeholder="Local do evento" Text="{Binding Local}" />

            <Label Text="Custo por Participante"/>
            <Entry  Keyboard="Numeric" 
                   Text="{Binding CustoPorParticipante}" />

            <Button Text="Cadastrar"
                    Clicked="OnCadastrarClicked"
                    BackgroundColor="DodgerBlue"
                    TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
