<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda13App.Views.ResumoEventoPage"
             Title="Resumo do Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Resumo do Evento" FontSize="24" FontAttributes="Bold" />

            <Label Text="{Binding Nome}" FontSize="20" />
            <Label Text="{Binding Local}" />

            <Label Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy}'}" />
            <Label Text="{Binding DataFim, StringFormat='Término: {0:dd/MM/yyyy}'}" />

            <Label Text="{Binding NumeroParticipantes, StringFormat='Participantes: {0}'}" />
            <Label Text="{Binding DuracaoEmDias, StringFormat='Duração: {0} dias'}" />

            <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por participante: R$ {0:F2}'}" />
            <Label Text="{Binding CustoTotal, StringFormat='Custo total: R$ {0:F2}'}"
                   FontAttributes="Bold" TextColor="DarkRed"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>